<?xml version="1.0" encoding="UTF-8"?>

<Context docBase="rabbit" path="rabbit" reloadable="true">
<Resource  
name="jdbc/mysql" 
auth="Container"   
type="javax.sql.DataSource" 
driverClassName="com.mysql.jdbc.Driver"
url="jdbc:mysql://localhost:3306/rabbit?autoReconnect=true"
username="root"
password="root"
maxWait="5000"
maxActive="20"
testOnBorrow="true"
factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
closeMethod="close"
/>
</Context>
